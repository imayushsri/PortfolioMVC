@section Scripts {
    <!-- particles.js -->
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        particlesJS.load('particles-js', '/Content/particles.json', () => {
            console.log('particles.js loaded - about section');
        });
    </script>

    <!-- GitHub Calendar -->
    <script src="https://unpkg.com/github-calendar@latest/dist/github-calendar.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/github-calendar@latest/dist/github-calendar-responsive.css" />
    <script>
        new GitHubCalendar("#github-calendar", "imayushsri", {
            responsive: true
        });

        // Wait for calendar to render, then apply custom styles
        setTimeout(() => {
            document.querySelectorAll("#github-calendar .day").forEach(day => {
                // Change block size
                day.setAttribute("width", "15");
                day.setAttribute("height", "15");
                day.setAttribute("rx", "3"); // rounded corners

                // Change color for days with contributions
                if (parseInt(day.getAttribute("data-count")) > 0) {
                    day.setAttribute("fill", "#c084f5");
                }

                // Optional: Change no-contribution day color
                if (parseInt(day.getAttribute("data-count")) === 0) {
                    day.setAttribute("fill", "#e0e0e0");
                }
            });

            // Change font size
            document.querySelector("#github-calendar").style.fontSize = "16px";
        }, 1000);
    </script>
}

