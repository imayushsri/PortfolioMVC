@{
    ViewBag.Title = "Education";
}

<div class="container-fluid education-section mt-5 pt-5">
    <!-- Particle background -->
    <div id="particles-js"></div>
    <div class="container mt-5">
        <h1 class="project-heading">
            My <strong class="purple">Education</strong> & Training
        </h1>
        <p style="color:white;">
            Here is my educational background and other professional training.
        </p>

        <div class="row justify-content-center custom-card" style="padding-bottom: 10px;">
            <!-- Education Card 3 -->
            <div class="col-md-4 project-card">
                <div class="card project-card-view">
                    @*<img src="~/Content/images/education/apprenticeship.jpg" class="card-img-top" alt="Apprenticeship Image" />*@
                    <div class="card-body">
                        <h5 class="card-title">Apprenticeship</h5>
                        <p class="card-text" style="text-align:justify;">
                            Worked on real-world projects and learned advanced concepts in C#, .NET MVC, and database-driven applications through industry-level training.
                        </p>
                        <p><strong>Year:</strong> 2025</p>
                    </div>
                </div>
            </div>

            <!-- Education Card 1 -->
            <div class="col-md-4 project-card">
                <div class="card project-card-view">
                    @*<img src="~/Content/images/education/diploma.jpg" class="card-img-top" alt="Diploma Image" />*@
                    <div class="card-body">
                        <h5 class="card-title">Diploma in Computer Science</h5>
                        <p class="card-text" style="text-align:justify;">
                            Completed Diploma in Computer Science & Engineering with 75% marks from GPAT, Gonda, with focus on software development, database management, and modern web technologies.
                        </p>
                        <p><strong>Year:</strong> 2022 – 2025</p>
                    </div>
                </div>
            </div>

            <!-- Education Card 2 -->
            <div class="col-md-4 project-card">
                <div class="card project-card-view">
                    @*<img src="~/Content/images/education/summer-training.jpg" class="card-img-top" alt="Training Image" />*@
                    <div class="card-body">
                        <h5 class="card-title">Summer Internship (MERN Stack)</h5>
                        <p class="card-text" style="text-align:justify;">
                            Completed 2-month summer internship at Techpile Technology Pvt. Ltd., gaining hands-on experience in MongoDB, Express.js, React, and Node.js.
                        </p>
                        <p><strong>Year:</strong> 2024</p>
                    </div>
                </div>
            </div>

            <!-- Education Card 3 -->
            <div class="col-md-4 project-card">
                <div class="card project-card-view">
                    @*<img src="~/Content/images/education/summer-training.jpg" class="card-img-top" alt="Training Image" />*@
                    <div class="card-body">
                        <h5 class="card-title">Summer Internship (.NET MVC)</h5>
                        <p class="card-text" style="text-align:justify;">
                            Completed 2-month summer internship at Techpile Technology Pvt. Ltd., gaining hands-on experience in MSSQL, C#, .NET, and JS.
                        </p>
                        <p><strong>Year:</strong> 2023</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        particlesJS.load('particles-js', '/Content/particles.json', function () {
            console.log('particles.js loaded - Education section');
        });
    </script>
}

<style>
    /* Particles background */
    #particles-js {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 2;
        top: 0;
        left: 0;
    }

    .custom-card, .project-card {
        z-index: 99;
    }

    .education-section {
        position: relative;
    }
</style>


