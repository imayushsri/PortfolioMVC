@{
    ViewBag.Title = "Home Page";
}

<section>
    <div class="container-fluid home-section" id="home">
        <!-- Particle background -->
        <div id="particles-js"></div>

        <div class="container home-content">
            <div class="row">

                <!-- Left column: Text -->
                <div class="col-md-7 home-header">
                    <h1 style="padding-bottom: 15px;" class="heading">
                        Hi There! <span class="wave" role="img" aria-labelledby="wave">👋🏻</span>
                    </h1>
                    <h1 class="heading-name">
                        I'M <strong class="main-name text-uppercase">Ayush Srivastava</strong>
                    </h1>

                    <div style="padding: 50px; text-align: left;">
                        <!-- Typewriter text -->
                        <span id="typewriter"></span>
                    </div>
                </div>

                <!-- Right column: Image -->
                <div class="col-md-5" style="padding-bottom: 20px;">
                    <img src="~/Content/Images/home.png" alt="home pic" class="img-fluid" style="max-height: 450px;" />
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_Home2")
</section>

@section Scripts {
    <!-- particles.js -->
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        particlesJS.load('particles-js', '/Content/particles.json', function () {
        });
    </script>

    <!-- Typewriter Script -->
    <script src="https://cdn.jsdelivr.net/npm/typewriter-effect@latest/dist/core.js"></script>
    <script>
        var app = document.getElementById('typewriter');
        var typewriter = new Typewriter(app, {
            loop: true,
            deleteSpeed: 50
        });

        typewriter
            .typeString("Full Stack Developer")
            .pauseFor(1000)
            .deleteAll()
            .typeString(".NET Developer")
            .pauseFor(1000)
            .deleteAll()
            .typeString("MERN Stack Developer")
            .pauseFor(1000)
            .deleteAll()
            .typeString("Coder")
            .pauseFor(1000)
            .start();
    </script>
}

<style>
    /* Make particles cover the background */
    #particles-js {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 0;
        top: 0;
        left: 0;
    }

    .home-section {
        position: relative;
        z-index: 1;
    }
</style>
